.event.show
	%h2=@event.name
	.event_info
		%p.address
			=@event.address
			=display_location_info(@event.city)
		%p.starts_at=@event.starts_at
	= render :partial => 'map', :locals => {:json => @json}
	- if @event.description
		%h3 Description
		=simple_format(sanitize(@event.description) )
- content_for :sidebar_right do
	#sidebar.event
		.sidebar_content
			- if user_signed_in?
				.event_highlights
					.attendance
						- if @attendance.present?
							=link_to raw("<span>Attending</span>"), attendance_path(@attendance.id), :class => "stop_attending", :method => :delete
						- else
							=link_to raw("<span>Join the event</span>"), attendances_path(@event), :class => "attend_link", :method => :post
			.event_highlights
				.event_highlight.left
					=distance_of_time_in_short_words(@event.starts_at)
				.event_highlight.right
					assistans
					%span=@event.attendances.count
			.event_highlights
				.event_highlight.left= image_tag "icons/weather/sun.png"
				.event_highlight
					%span.temp 30&deg;
					sunny
			-if @event.attendances.present?
				.event_highlights
					%h4 Attendencies(#{@event.attendances.count})
					- @event.attendances.each do |attendance|
						.attendance
							=image_tag current_user.avatar(:small)
				
:javascript
	$(document).ready(function() {
		$("a.stop_attending").bind("mouseenter",function(){
			$(this).find('span').html("Stop Attending");
		}).bind("mouseleave",function(){
			$(this).find('span').html("Attending");
		}); 
	});
